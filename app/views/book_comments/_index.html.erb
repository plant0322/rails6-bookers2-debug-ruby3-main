<% book.book_comments.each do |book_comment| %>
  <table>
    <tbody>
      <tr>
        <td>
          <%= link_to user_path(book_comment.user) do %>
            <%= image_tag book_comment.user.get_profile_image, size:'50x50' %><br>
            <%= book_comment.user.name %>
          <% end %>
        </td>
        <td>
          <p class="m-3"><%= book_comment.comment %></p>
        </td>
        <td>
          <% if book_comment.user == current_user %>
            <%= link_to 'Destroy', book_book_comment_path(book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger mx-3", remote: true %>
          <% end %>
        </td>
      </tr>
    </tbody>
  </table>
<% end %>
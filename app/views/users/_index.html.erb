<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th>image</th>
      <th>name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% users.each do |user| %>
      <tr>
        <td>
          <%= link_to user_path(user) do %>
            <%= image_tag user.get_profile_image, size: '50x50' %>
          <% end %>
        </td>
        <td><%= user.name %></td>
        <td><%= link_to 'Show', user %></td>
        <td><p>フォロー数：<%= user.followings.count %></p></td>
        <td><p>フォロワー数：<%= user.followers.count %></p></td>
        <td>
          <%= render 'relationships/btn',user: user %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

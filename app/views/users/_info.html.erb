<table class='table'>
  <tr><%= image_tag user.get_profile_image, size:'100x100' %></tr>
  <tr>
	  <th>name</th>
	  <th><%= user.name %></th>
  </tr>
  <tr>
	  <th>introduction</th>
	  <th><%= user.introduction %></th>
  </tr>
  <tr>
	  <th>follows</th>
	  <th>
	    <%= link_to user_followings_path(user) do %>
	      <%= user.followings.count %>
	    <% end %>
	  </th>
  </tr>
  <tr>
	  <th>followers</th>
	  <th>
	    <%= link_to user_followers_path(user) do %>
	      <%= user.followers.count %>
	    <% end %>
	  </th>
  </tr>
</table>

<div class='row'>
  <%= link_to edit_user_path(user), class: "btn btn-outline-secondary btn-block" do %>
    <i class="fas fa-user-cog"></i>
  <% end %>
</div>

<div class='row'>
	<% if current_user != user %>
		<% if current_user.followed_by?(user) %>
		  <%= link_to 'フォロー外す', user_relationships_path(user.id), method: :delete, class: "btn btn-success mt-3" %>
		<% else %>
		  <%= link_to 'フォローする', user_relationships_path(user.id), method: :post, class: "btn btn-info mt-3" %>
		<% end %>
	<% end %>
</div>
<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @book.user %>
      <h2 class="mt-3">New book</h2>
      <%= render 'form', book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <td><p>コメント数：<%= @book.book_comments.count %></p></td>
          <td>
            <% if @book.favorited_by?(current_user) %>
              <%= link_to book_favorite_path(@book), method: :delete do %>
                <i class="fa-solid fa-heart"></i> <%= @book.favorites.count %>
              <% end %>
            <% else %>
              <%= link_to book_favorite_path(@book), method: :post do %>
                <i class="fa-regular fa-heart"></i> <%= @book.favorites.count %>
              <% end %>
            <% end %>
          </td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
            <td><%= link_to 'Destroy', @book, method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger"%></td>
          <% end %>
        </tr>
      </table>
      <div>
        <% @book.book_comments.each do |book_comment| %>
          <table>
            <tbody>
              <tr>
                <td>
                  <%= link_to user_path(book_comment.user) do %>
                    <%= image_tag book_comment.user.get_profile_image, size:'50x50' %><br>
                    <%= book_comment.user.name %>
                  <% end %>
                </td>
                <td>
                  <p class="m-3"><%= book_comment.comment %></p>
                </td>
                <td>
                  <%= link_to 'Destroy', book_book_comment_path(@book, book_comment), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger mx-3" %>
                </td>
              </tr>
            </tbody>
          </table>
        <% end %>
      </div>
      <div>
        <%= form_with model: [@book, @book_comment] do |f| %>
          <%= f.text_area :comment, class: 'form-control mb-2' %>
          <%= f.submit '送信' %>
        <% end %>
      </div>
    </div>
  </div>
</div>